{
    "compilerOptions": {
        /* Language and Environment */
        "target": "es2022",
        "lib": ["ESNext"],
        "moduleDetection": "force",

        /* Modules */
        "module": "preserve",
        "resolveJsonModule": true,

        /* JavaScript Support */
        "allowJs": true,

        /* Type Checking */
        "strict": true,
        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,

        /* Emit */
        "noEmit": true,

        /* Interop Constraints */
        "esModuleInterop": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,

        /* Completeness */
        "skipLibCheck": true

    },
    "include": ["src", "test"]
}
